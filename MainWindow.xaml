        <Button Name="btnSlash" Content="/" HorizontalAlignment="Left" Margin="745,170,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnRShift" Content="Shift" HorizontalAlignment="Left" Margin="810,170,0,0" VerticalAlignment="Top" Width="135" Click="btnShift_Click" />
        <!--Fifth Row-->
        <Button x:Name="btnCtrl" Content="Ctrl" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top" Width="90" Click="btnCtrl_Click" />
        <Button x:Name="btnSpace" Content="" HorizontalAlignment="Left" Margin="105,210,0,0" VerticalAlignment="Top" Width="650" Click="btn_click" />
        <Button x:Name="btnCtrl2" Content="Ctrl" HorizontalAlignment="Left" Margin="760,210,0,0" VerticalAlignment="Top" Width="90" Click="btnCtrl_Click" />
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Margin="855,210,0,0" VerticalAlignment="Top" Width="90" Click="btn_click" />
    </Grid>
</Window>
