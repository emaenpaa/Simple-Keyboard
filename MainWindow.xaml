<Window x:Class="eggKeyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eggKeyboard"
        mc:Ignorable="d"
        Title="MainWindow" 
        Topmost="True"
        WindowStyle="None"
        Focusable="False"
        x:Name="Window"  
        WindowState="Normal" 
        ShowActivated="False" 
        Loaded="Window_Loaded"
        Height="265" 
        Width="970"
        MouseDown="Window_MouseDown"
        FontFamily="Arial"
        FontSize="20">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="35"></Setter>
            <Setter Property="Opacity" Value=".85"></Setter>
            <!--<Setter Property="Background" Value="#fff"></Setter>-->
        </Style>
    </Window.Resources>
    <Grid>
        <Button Name="btnTop" Content="Top" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnTop_Click" />
        <!--First Row-->
        <Button Name="btnTilde" Content="`" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btn1" Content="1" HorizontalAlignment="Left" Margin="75,50,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btn2" Content="2" HorizontalAlignment="Left" Margin="140,50,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btn3" Content="3" HorizontalAlignment="Left" Margin="205,50,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btn4" Content="4" HorizontalAlignment="Left" Margin="270,50,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btn5" Content="5" HorizontalAlignment="Left" Margin="335,50,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btn6" Content="6" HorizontalAlignment="Left" Margin="400,50,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btn7" Content="7" HorizontalAlignment="Left" Margin="465,50,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btn8" Content="8" HorizontalAlignment="Left" Margin="530,50,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btn9" Content="9" HorizontalAlignment="Left" Margin="595,50,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btn0" Content="0" HorizontalAlignment="Left" Margin="660,50,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnDash" Content="-" HorizontalAlignment="Left" Margin="725,50,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnEqual" Content="=" HorizontalAlignment="Left" Margin="790,50,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="855,50,0,0" VerticalAlignment="Top" Width="90" Click="btn_click" />
        <!--Second Row-->
        <Button x:Name="btnTab" Content="" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="90" />
        <Button Name="btnQ" Content="q" HorizontalAlignment="Left" Margin="105,90,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnW" Content="w" HorizontalAlignment="Left" Margin="170,90,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnE" Content="e" HorizontalAlignment="Left" Margin="235,90,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnR" Content="r" HorizontalAlignment="Left" Margin="300,90,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnT" Content="t" HorizontalAlignment="Left" Margin="365,90,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnY" Content="y" HorizontalAlignment="Left" Margin="430,90,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnU" Content="u" HorizontalAlignment="Left" Margin="495,90,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnI" Content="i" HorizontalAlignment="Left" Margin="560,90,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
