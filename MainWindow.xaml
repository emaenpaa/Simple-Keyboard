        <Button Name="btnBSlash" Content="\" HorizontalAlignment="Left" Margin="885,90,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <!--Third Row-->
        <Button x:Name="btnCapsLock" Content="Caps Lock" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Width="110" Click="btnCapsLock_Click" />
        <Button Name="btnA" Content="a" HorizontalAlignment="Left" Margin="125,130,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
