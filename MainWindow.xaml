        <Button Name="btnH" Content="h" HorizontalAlignment="Left" Margin="450,130,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnJ" Content="j" HorizontalAlignment="Left" Margin="515,130,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnK" Content="k" HorizontalAlignment="Left" Margin="580,130,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnL" Content="l" HorizontalAlignment="Left" Margin="645,130,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnSemi" Content=";" HorizontalAlignment="Left" Margin="710,130,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnApost" Content="'" HorizontalAlignment="Left" Margin="775,130,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnEnter" Content="Enter" HorizontalAlignment="Left" Margin="840,130,0,0" VerticalAlignment="Top" Width="105" Click="btn_click" />
        <!--Fourth Row-->
        <Button Content="Shift" Name="btnShift" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top" Width="145" Click="btnShift_Click" />
        <Button Name="btnZ" Content="z" HorizontalAlignment="Left" Margin="160,170,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnX" Content="x" HorizontalAlignment="Left" Margin="225,170,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnC" Content="c" HorizontalAlignment="Left" Margin="290,170,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
        <Button Name="btnV" Content="v" HorizontalAlignment="Left" Margin="355,170,0,0" VerticalAlignment="Top" Width="60" Click="btn_click" />
